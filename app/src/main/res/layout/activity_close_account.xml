<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close My Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're sorry to see you go! Please let us know why you're closing your account."
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your feedback (optional)"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonConfirmCloseAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Close Account"
            android:backgroundTint="@color/primaryColorDark"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/primaryTextColor"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>

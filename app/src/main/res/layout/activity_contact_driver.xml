<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/backBtnContact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Driver"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/backBtnContact"
        android:layout_marginTop="80dp"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCallDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Driver"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColorDark"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnMessageDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message Driver"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primaryColorDark"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</RelativeLayout>

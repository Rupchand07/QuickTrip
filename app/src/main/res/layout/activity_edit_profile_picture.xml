<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:id="@+id/backBtn6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile Picture"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/primaryColorDark"
        android:layout_marginBottom="24dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/currentProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/person"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/buttonChoosePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose from Gallery"
        android:drawableStart="@drawable/baseline_photo_library_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryColorDark"
        android:textColor="?attr/colorOnPrimary" />

    <Button
        android:id="@+id/buttonTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take a Photo"
        android:drawableStart="@drawable/baseline_camera_alt_24"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryColorDark"
        android:textColor="?attr/colorOnPrimary" />

</LinearLayout>
